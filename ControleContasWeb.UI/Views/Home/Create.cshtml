@model ControleContasWeb.Data.Contas

@{
    ViewBag.Title = "Create";
}

<h2>Cadastrar nova conta</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.HiddenFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Id)
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.DataLeitura">Data da leitura</label>
            </div>
                <div class="col-md-11">
                    @Html.EditorFor(model => model.DataLeitura, new { @id = "data" })
                    @Html.ValidationMessageFor(model => model.DataLeitura, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.NumLeitura">Número da conta</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.NumLeitura)
                @Html.ValidationMessageFor(model => model.NumLeitura, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Consumo">Consumo</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Consumo)
                @Html.ValidationMessageFor(model => model.Consumo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.ValorPagar">Valor a pagar</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.ValorPagar)
                @Html.ValidationMessageFor(model => model.ValorPagar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.DataPagto">Data do pagamento</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.DataPagto)
                @Html.ValidationMessageFor(model => model.DataPagto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Tipo.Id">Tipo da conta</label>
            </div>
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.Tipo.Id, ViewBag.Tipo as SelectList, string.Empty, new { @class = "control-label col-md-2" })
                @Html.ActionLink(" - Cadastro de Tipos de Conta", "CreateTipo")
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.IdUsuario, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IdUsuario)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
