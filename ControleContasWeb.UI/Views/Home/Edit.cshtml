@model ControleContasWeb.Data.Contas

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.HiddenFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataLeitura, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataLeitura)
                @Html.ValidationMessageFor(model => model.DataLeitura)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumLeitura, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumLeitura)
                @Html.ValidationMessageFor(model => model.NumLeitura)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Consumo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Consumo)
                @Html.ValidationMessageFor(model => model.Consumo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ValorPagar, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ValorPagar)
                @Html.ValidationMessageFor(model => model.ValorPagar)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataPagto, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataPagto)
                @Html.ValidationMessageFor(model => model.DataPagto)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tipo.Id, new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.Tipo.Id, ViewBag.Tipo as SelectList, string.Empty, new { @class = "control-label col-md-2" })
            @Html.ActionLink("Cadastrar Novo", "CreateTipo", "Home")
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.IdUsuario, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.IdUsuario)
                @Html.ValidationMessageFor(model => model.IdUsuario)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
