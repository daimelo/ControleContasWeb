@model ControleContasWeb.Data.Usuarios

@{
    ViewBag.Title = "Cadastro de usuário";
}

<h2>Cadastrar Usuário</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Usuarios</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.HiddenFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-11">
                @Html.HiddenFor(model => model.Id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Nome">Nome</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Email">E-mail</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Senha">Senha</label>
            </div>
            <div class="col-md-11">
                @Html.EditorFor(model => model.Senha)
                @Html.ValidationMessageFor(model => model.Senha)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <label for="model.Grupo.Id">Grupo do usuário</label>
            </div>
            <div class="col-md-11">
                @Html.DropDownListFor(model => model.Grupo.Id, ViewBag.Grupo as SelectList, string.Empty, new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Home")
</div>
